FROM node:18

WORKDIR /app

# Kopírujeme package.json a instalujeme závislosti
COPY package.json ./
RUN npm install
RUN npm install react-scripts@5.0.1 --save

# Kopírujeme zdrojový kód aplikace
COPY . .

# Expose port
EXPOSE 3000

# Použijte react-scripts místo vite
CMD ["npx", "react-scripts", "start"]