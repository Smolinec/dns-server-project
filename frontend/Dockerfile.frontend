FROM node:16

WORKDIR /app

# Kopírujeme konfigurační soubory pro npm
COPY package*.json ./

# Instalujeme závislosti
RUN npm install

# Kopírujeme zbytek souborů
COPY . .

# Expose port for development server
EXPOSE 3000

# Změna zde - použití příkazu, který je definován v package.json
CMD ["npm", "start"]
# Alternativně:
# CMD ["npx", "react-scripts", "start"]