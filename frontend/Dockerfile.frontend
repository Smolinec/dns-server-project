FROM node:16

WORKDIR /app

# Kopírujeme konfigurační soubory pro npm
COPY package*.json ./

# Instalujeme závislosti a explicitně přidáme react-scripts
RUN npm install
RUN npm install react-scripts@5.0.1 --save

# Kopírujeme zbytek souborů
COPY . .

# Expose port for development server
EXPOSE 3000

# Spuštění vývojového serveru přímo pomocí npx
CMD ["npx", "vite", "--host", "0.0.0.0"]